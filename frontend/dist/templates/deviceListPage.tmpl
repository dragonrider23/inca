{{define "deviceListPage"}}
    {{template "header"}}

    <h2>Device Configuration:</h2>
    <h4>Filename: {{.Path}}</h4>

    <form>
        <button type="button" class="btn btn-primary" id="saveDeviceListBtn" onClick="saveDeviceList();">Save</button><br><br>
        <textarea cols="125" rows="30" id="deviceListConfig">{{.ConfText}}</textarea>
    </form>
    <br>

    {{template "scripts"}}
    <script type="text/javascript" src="/js/deviceListPage.min.js"></script>
    {{template "footer"}}
{{end}}
