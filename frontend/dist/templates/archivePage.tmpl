{{define "archivePage"}}
    {{template "header"}}

    <h2>Latest Configuration Archives:</h2>

    <form>
        <input type="text" id="searchAddress" value="">
        <button type="button" id="searchBtn">Search</button>
    </form>

    <br>
    <span id="searchResults"></span>
    <br>

    <h4>Device List:</h4>
    <table class="archiveList">
        <thead>
            <tr>
                <td>New Config</td>
                <td>IP Address</td>
                <td>Name</td>
                <td>Protocol</td>
                <td>Manufacturer</td>
                <td>View Config</td>
            </tr>
        </thead>
        {{range .Devices}}
            <tr>
                <td style="text-align: center;">
                    <button type="button"
                        class="single-run-btn"
                        data-address="{{.Address}}"
                        data-man="{{.Manufacturer}}"
                        data-proto="{{.Proto}}"
                        data-name="{{.Name}}">
                        <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
                    </button>
                </td>
                <td>{{.Address}}</td>
                <td>{{.Name}}</td>
                <td>{{.Proto}}</td>
                <td>{{.Manufacturer}}</td>
                <td><a href="/view/{{.Path}}">{{.Path}}</a></td>
            </tr>
        {{end}}
    </table>

    {{template "scripts"}}
    <script type="text/javascript" src="/js/archive.min.js"></script>
    {{template "footer"}}
{{end}}
