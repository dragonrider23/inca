{{define "singleDevicePage"}}
    {{template "header"}}

    <div class="row clearfix">
        <div class="col-md-12 column">
            <h2>Device - {{.Device.Name}} ({{.Device.Hostname}})</h2>

            <form>
                <div class="form-group">
                    <label for="deviceName">Name:</label>
                    <input type="text" class="form-control" id="deviceName" value="{{.Device.Name}}">
                </div>

                <div class="form-group">
                    <label for="deviceHostName">Hostname:</label>
                    <input type="text" class="form-control" id="deviceHostName" value="{{.Device.Hostname}}">
                </div>

                <div class="form-group">
                    <label for="deviceConnProfile">Connection Profile:</label>
                    <select class="form-control" id="deviceConnProfile">
                    {{range .ConnProfiles}}
                        {{if eq $.Device.ConnProfile .Profileid}}
                            <option value="{{.Profileid}}" selected="selected">{{.Name}}</option>
                        {{else}}
                            <option value="{{.Profileid}}">{{.Name}}</option>
                        {{end}}
                    {{end}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="deviceMan">Manufacturer:</label>
                    <input type="text" class="form-control" id="deviceMan" value="{{.Device.Manufacturer}}">
                </div>

                <div class="form-group">
                    <label for="deviceModel">Model:</label>
                    <input type="text" class="form-control" id="deviceModel" value="{{.Device.Model}}">
                </div>

                <div class="form-group">
                    <label for="deviceDisabled">Disabled:</label>
                    {{if .Device.Hostname}}
                        <input type="checkbox" id="deviceDisabled">
                    {{else}}
                        <input type="checkbox" id="deviceDisabled" checked="checked">
                    {{end}}
                </div>

                <div class="form-group">
                    <button class="btn btn-default" type="button" id="saveDeviceBtn">Save</button>
                </div>
            </form>
        </div>
    </div>

    {{template "scripts"}}
    <!-- <script type="text/javascript" src="/js/prod.min.js"></script> -->
    {{template "footer"}}
{{end}}
